{
  "name": "@contentful/app-action-utils",
  "description": "Utilities for intearcting with Hosted App Actions",
  "version": "1.4.0",
  "license": "MIT",
  "author": "Contentful <opensource@contentful.com>",
  "main": "dist/index.mjs",
  "typings": "dist/index.d.ts",
  "module": "dist/index.mjs",
  "files": [
    "dist",
    "README.md"
  ],
  "engines": {
    "node": ">=16.13"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/contentful/app-action-utils"
  },
  "scripts": {
    "lint": "eslint --ext .ts ./src",
    "lint:fix": "npm run lint -- --fix",
    "build": "tsup",
    "test": "jest test/**/*.spec.ts",
    "prepublish": "npm run build",
    "semantic-release": "semantic-release"
  },
  "exports": {
    "default": "./dist/index.js",
    "require": "./dist/index.js",
    "import": "./dist/index.mjs",
    "node": "./dist/index.js"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "cjs",
      "esm"
    ],
    "clean": true,
    "dts": true
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": [
      "main",
      "next",
      "next-major"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "releaseRules": [
            {
              "type": "build",
              "scope": "deps",
              "release": "patch"
            }
          ]
        }
      ],
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.3",
    "@commitlint/config-conventional": "^17.4.3",
    "@semantic-release/changelog": "^6.0.2",
    "@size-limit/preset-small-lib": "^8.1.1",
    "@types/jest": "^29.4.0",
    "@types/node": "^20.1.0",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "contentful-management": "^11.3.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jest": "^29.4.3",
    "semantic-release": "^21.0.0",
    "size-limit": "^8.1.1",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "tslib": "^2.2.0",
    "tsup": "^6.6.3",
    "typescript": "^5.0.2"
  }
}
